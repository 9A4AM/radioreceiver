{
  "name": "radioreceiver",
  "description": "A website that lets you listen to the radio from your browser using an RTL-SDR tuner.",
  "version": "0.0.1",
  "author": "Jacobo Tarrio <jtarrio@gmail.com>",
  "license": "Apache-2.0",

  "scripts": {
    "rollup": "rollup -c",
    "build": "npm run rollup && cp tools/*.html dist/tools/",
    "build-on-change": "onchange \"src\" \"tools\" -- npm run build",
    "serve": "npm run build && browser-sync start --server \"dist/\" --files \"dist/\"",
    "watch": "run-p serve build-on-change"
  },

  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/w3c-web-usb": "^1.0.10",
    "browser-sync": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "rollup": "^4.9.6",
    "tslib": "^2.6.2"
  }
}
